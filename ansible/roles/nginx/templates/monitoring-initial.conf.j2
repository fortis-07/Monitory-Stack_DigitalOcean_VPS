server {
    listen 80;
    listen [::]:80;
    server_name {{ monitoring_domain }};

    # Redirect all HTTP traffic to HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }

    # Let's Encrypt challenges
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }
}